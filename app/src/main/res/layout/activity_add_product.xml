<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AddProductActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_layout"
            android:layout_marginTop="-4dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:layout_width="74dp"
                android:layout_height="70dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/ic_baseline_smartphone_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:fontFamily="sans-serif-medium"
                android:text="Smart Room Finder \n Add Product"
                android:layout_marginRight="5dp"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etpname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/auth_edit"
                    android:hint="Name"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:drawableTint="#c2c0bf"
                    android:inputType="text"
                    android:layout_marginRight="7dp"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/etplocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/auth_edit"
                    android:hint="Location"
                    android:inputType="text"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="7dp"
                    android:drawableTint="#c2c0bf"
                    android:textSize="14dp" />

            </LinearLayout>

            <EditText
                android:id="@+id/etpprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/auth_edit"
                android:hint="Price"
                android:inputType="numberDecimal"
                android:padding="10dp"
                android:drawableTint="#c2c0bf"
                android:textSize="14dp" />


            <EditText
                android:id="@+id/etpdesc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:background="@drawable/auth_edit"
                android:hint="Description"
                android:inputType="textMultiLine"
                android:lines="8"
                android:maxLines="10"
                android:ems="10"
                android:gravity="left|top"
                android:minLines="6"
                android:scrollbars="vertical"
                android:padding="10dp"
                android:drawableTint="#c2c0bf"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/etpnumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/auth_edit"
                android:hint="Phone number"
                android:inputType="number"
                android:padding="10dp"
                android:drawableTint="#c2c0bf"
                android:textSize="14dp" />



            <TextView
                android:id="@+id/tvnamea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Please select a image"
                android:drawableTint="#c2c0bf"
                android:textSize="14dp" />
                <ImageButton
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:id="@+id/btnsubmitproperty"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_launcher">
            </ImageButton>



            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Property"
                android:id="@+id/btnpsubmit"
                android:clickable="true"
                android:background="@drawable/auth_button"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:padding="12dp"
                android:textSize="13dp"
                android:textAllCaps="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You will be redirected to a new window inorder to submit image "
                android:textSize="12dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel For Now? "
                    android:textSize="13dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtLogin"
                    android:clickable="true"
                    android:text="Cancel"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:textColor="@color/card_color"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>